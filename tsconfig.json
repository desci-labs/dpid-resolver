{
    "compilerOptions": {
        // https://www.typescriptlang.org/docs/handbook/modules/guides/choosing-compiler-options.html
        "module": "nodenext",
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "inlineSources": true,
        "inlineSourceMap": true
        "skipLibCheck": true

        "outDir": "./dist",
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
